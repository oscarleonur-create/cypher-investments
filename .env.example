# Research agent runtime mode
RESEARCH_AGENT_EXECUTION_MODE=agent_loop
RESEARCH_AGENT_PROVIDER_MODE=real
RESEARCH_AGENT_OFFLINE_MODE=0

# Search provider (Tavily)
RESEARCH_AGENT_TAVILY_API_KEY=your_tavily_api_key_here
RESEARCH_AGENT_SEARCH_ENDPOINT=https://api.tavily.com/search
RESEARCH_AGENT_TAVILY_SEARCH_DEPTH=advanced

# LLM provider (Anthropic Claude)
RESEARCH_AGENT_ANTHROPIC_API_KEY=your_anthropic_api_key_here
RESEARCH_AGENT_LLM_MODEL=claude-sonnet-4-5-20250929
RESEARCH_AGENT_LLM_TIMEOUT_SECONDS=60
RESEARCH_AGENT_LLM_MAX_TOKENS=4096
RESEARCH_AGENT_LLM_TEMPERATURE=0.1

# Loop budgets
RESEARCH_AGENT_MAX_ITERATIONS=4
RESEARCH_AGENT_MAX_QUERIES_PER_ITERATION=4
RESEARCH_AGENT_MAX_URLS_PER_QUERY=5
RESEARCH_AGENT_MAX_SOURCES_TOTAL=30
RESEARCH_AGENT_MIN_EVIDENCE_ITEMS=8

# Search policy
RESEARCH_AGENT_CURATED_FIRST=1
RESEARCH_AGENT_CURATED_DOMAINS=sec.gov,reuters.com,bloomberg.com,wsj.com,ft.com
RESEARCH_AGENT_ALLOW_FALLBACK_WEB=1

# Optional HTTP tuning
RESEARCH_AGENT_HTTP_TIMEOUT_SECONDS=10
RESEARCH_AGENT_HTTP_USER_AGENT=research-agent/0.1
